<%- include('../includes/head.ejs') %>
</head>

  <body>
    <%- include('../includes/navigation.ejs') %>
    <main>
      <form class="product-form" action="/admin/<% if(isEditing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
        <div class="form-control test">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" value="<% if(isEditing) { %><%= product.productTitle %><% } %>"/>
        </div>
        <div class="form-control">
          <label for="imageUrl">Image URL</label>
          <input type="text" name="imageUrl" id="imageUrl" value="<% if(isEditing) { %><%= product.imageUrl %><% } %>"/>
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input type="number" name="price" id="price" step="0.01" value="<% if(isEditing) { %><%= product.price %><% } %>"/>
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea name="description" id="description" rows="5" >
            <% if(isEditing) { %><%= product.description %><% } %>
          </textarea>
        </div>
        <% if(isEditing) { %>
          <input type="hidden" value="<%= product._id %>" name="productId"/>
        <% } %>
        <button class="btn" type="submit">
          <% if(isEditing) {
            %>Update Product<%
          } else {
            %>Add Product<%
          } %>
        </button>
      </form>
    </main>
  <%- include('../includes/end.ejs') %>
